#!/usr/bin/env python3
# Send an arbitrary command to the currently used neovim instance
import os
import sys

from neovim import attach

args = sys.argv[1:]

addr = os.environ.get("NVIM_LISTEN_ADDRESS", None)
if not addr:
    print("Not inside neovim")
    sys.exit(1)

nvim = attach("socket", path=addr)

for arg in args:
    nvim.command(f"{arg}")
